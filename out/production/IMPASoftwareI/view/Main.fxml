<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="500.0" prefWidth="1000.0" spacing="20.0">
         <children>
            <Label text="Inventory Management System" />
            <HBox alignment="CENTER" prefHeight="300.0" prefWidth="0.0" spacing="100.0">
               <children>
                  <VBox prefHeight="300.0" prefWidth="400.0" style="-fx-border-color: #D3D3D3; -fx-border-radius: 10; -fx-border-width: 2;">
                     <children>
                        <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="125.0">
                           <children>
                              <Label text="Part">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="searchPartTextField" alignment="CENTER" prefHeight="26.0" prefWidth="202.0" promptText="Search by Part ID or Name">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin></TextField>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="25.0" top="5.0" />
                           </padding>
                        </HBox>
                        <TableView maxHeight="300.0" maxWidth="500.0" prefHeight="300.0" prefWidth="500.0">
                          <columns>
                            <TableColumn fx:id="partIdColumn" prefWidth="75.0" text="Part ID" />
                            <TableColumn fx:id="partNameColumn" prefWidth="100.0" text="Part Name" />
                              <TableColumn fx:id="partInventoryLevelColumn" prefWidth="100.0" text="Inventory Level" />
                              <TableColumn fx:id="partPricePerUnitColumn" prefWidth="125.0" text="Price/Cost per Unit" />
                          </columns>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Button fx:id="addPartButton" mnemonicParsing="false" onAction="#onActionAddPart" text="Add" />
                              <Button fx:id="modifyPartButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onActionModifyPart" text="Modify" />
                              <Button fx:id="deletePartButton" layoutX="72.0" layoutY="10.0" mnemonicParsing="false" onAction="#onActionDeletePart" text="Delete" />
                           </children>
                           <padding>
                              <Insets bottom="5.0" right="20.0" top="5.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox layoutX="10.0" layoutY="10.0" prefHeight="300.0" prefWidth="400.0" style="-fx-border-color: #D3D3D3; -fx-border-radius: 10; -fx-border-width: 2;">
                     <children>
                        <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="125.0">
                           <children>
                              <Label text="Products">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="searchProductTextField" alignment="CENTER" prefHeight="26.0" prefWidth="202.0" promptText="Search by Product ID or Name">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </TextField>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="25.0" top="5.0" />
                           </padding>
                        </HBox>
                        <TableView maxHeight="300.0" maxWidth="500.0" prefHeight="300.0" prefWidth="500.0">
                           <columns>
                              <TableColumn fx:id="productIdColumn" prefWidth="75.0" text="Product ID" />
                              <TableColumn fx:id="productNameColumn" prefWidth="100.0" text="Product Name" />
                              <TableColumn fx:id="productInventoryLevelColumn" prefWidth="100.0" text="Inventory Level" />
                              <TableColumn fx:id="productPricePerUnitColumn" prefWidth="125.0" text="Price/Cost per Unit" />
                           </columns>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Button fx:id="addProductButton" mnemonicParsing="false" onAction="#onActionAddProduct" text="Add" />
                              <Button fx:id="modifyProductButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onActionModifyProduct" text="Modify" />
                              <Button fx:id="deleteProductButton" layoutX="72.0" layoutY="10.0" mnemonicParsing="false" onAction="#onActionDeleteProduct" text="Delete" />
                           </children>
                           <padding>
                              <Insets bottom="5.0" right="20.0" top="5.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onActionExit" text="Exit" textAlignment="CENTER" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
