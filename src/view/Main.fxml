<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
      <VBox maxHeight="400.0" maxWidth="1000.0" prefHeight="400.0" prefWidth="1300.0" spacing="20.0">
         <children>
            <Label text="Inventory Management System" />
            <HBox prefHeight="300.0" prefWidth="0.0">
               <children>
                  <VBox prefHeight="300.0" prefWidth="500.0" spacing="20.0" style="-fx-border-color: black; -fx-border-radius: 20;">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="200.0">
                           <children>
                              <Label text="Parts">
                                 <font>
                                    <Font size="18.0" />
                                 </font></Label>
                              <TextField alignment="CENTER" prefHeight="26.0" prefWidth="202.0" promptText="Search by Part ID or Name" />
                           </children>
                           <padding>
                              <Insets left="20.0" right="20.0" />
                           </padding>
                        </HBox>
                        <TableView maxHeight="300.0" maxWidth="500.0" prefHeight="300.0" prefWidth="500.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="Part ID" />
                            <TableColumn prefWidth="125.0" text="Part Name" />
                              <TableColumn prefWidth="125.0" text="Inventory Level" />
                              <TableColumn prefWidth="175.0" text="Price/Cost per Unit" />
                          </columns>
                        </TableView>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button mnemonicParsing="false" text="Add" />
                              <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Modify" />
                              <Button layoutX="72.0" layoutY="10.0" mnemonicParsing="false" text="Delete" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button mnemonicParsing="false" text="Exit" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
